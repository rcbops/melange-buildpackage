#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with python2

ifeq (,$(findstring nocheck, $(DEB_BUILD_OPTIONS)))
override_dh_auto_test:
	/run_tests.sh -N || true
endif

get-orig-source:
	uscan --verbose --force-download --rename --destdir=../build-area
